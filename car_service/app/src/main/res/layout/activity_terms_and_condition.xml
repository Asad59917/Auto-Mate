<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terms &amp; Conditions"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="28dp" />

        </LinearLayout>

        <!-- Introduction Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great choice! Auto Mate sounds like a user-friendly and efficient app for car services. Here's a customized terms and conditions section specifically for your app:\n\nAuto Mate App Terms and Conditions\nWelcome to the Auto Mate mobile application! By using our app, you agree to the following terms and conditions:"
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Terms List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. Acceptance of Terms -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Acceptance of Terms:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• By accessing or using the Auto Mate app, you acknowledge that you have read, understood, and accepted these terms.\n• If you do not agree with any part of these terms, please refrain from using the app."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 2. Services Offered -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Services Offered:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Auto Mate provides a range of car-related services, including roadside assistance, maintenance scheduling, fuel delivery, and more.\n• Our goal is to enhance your car ownership experience and keep you safe on the road."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 3. User Conduct -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. User Conduct:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• You agree to use the app responsibly and in compliance with all applicable laws.\n• Any misuse, unauthorized access, or harmful behavior is strictly prohibited."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 4. Privacy and Data Collection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Privacy and Data Collection:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• We respect your privacy. Our privacy policy outlines how we collect, use, and protect your personal information.\n• By using Auto Mate, you consent to our privacy practices."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 5. Disclaimer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Disclaimer:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• While we strive for accuracy, the information provided within the app is for general purposes only.\n• Auto Mate is not liable for any direct, indirect, or consequential damages arising from app usage."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 6. Termination -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Termination:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• We reserve the right to terminate or suspend your access to the app if you violate these terms."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 7. Changes to Terms -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Changes to Terms:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• We may update these terms as needed. Any changes will be communicated within the app."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- 8. Contact Us -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Contact Us:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• If you have questions or need assistance, feel free to reach out to our support team."
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Closing Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for choosing Auto Mate! Drive safely and enjoy the convenience of our services.\n\nFeel free to customize this template further to align with your app's specific needs and legal requirements. If you have any other requests or need additional content, feel free to ask! 🚗🔧"
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>